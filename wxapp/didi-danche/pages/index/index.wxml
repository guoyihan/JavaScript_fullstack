<view class="map-box">
  <!-- lbs业务 location base service-->
  <map id="myMap" latitude="{{latitude}}" longitude="{{longitude}}" scale="{{scale}}" markers="{{markers}}" bindmarkertap='toVisit' show-location="true">     <!-- latitude 维度  longitude 经度-->
    <!-- 可以在地图之上 -->
    <cover-image class="map-icon map-icon_msg" src="/images/icon-msg.png" bindload="toMsg"></cover-image>
    <cover-image class="map-icon map-icon_user" src="/images/icon-user.png" bindload="toUser"></cover-image>
    <cover-image class="map-icon map-icon_reset" src="/images/reset.png" bindload="toReset"></cover-image>
  </map>    
</view>
<view class="main-btn" bindtap="toScan">
  <text class="main-text">扫码解锁</text>
</view>